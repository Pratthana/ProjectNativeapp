<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddaa99"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="325dp"
        android:layout_height="524dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="141dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="141dp"
            android:layout_marginRight="141dp"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/tracking" />

        <Button
            android:id="@+id/button"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="212dp"
            android:background="#7CB342"
            android:onClick="signInClick"
            android:text="Sign In"
            tools:text="@string/common_signin_button_text" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="200dp"
            android:background="#DBD7D7"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:textColor="#050404"
            android:textColorHint="#E80E0B0B" />


        <EditText
            android:id="@+id/editText2"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="265dp"
            android:layout_marginBottom="200dp"
            android:background="#DBD3D3"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="#E4090606" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="420dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="190dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="420dp"
            app:srcCompat="@drawable/google" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="460dp" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>